<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="190dp"
    android:id="@+id/card_categorie"
    android:radius="30dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="8dp"
    android:clickable="true"
    android:background="@color/blue_clear_700"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:elevation="2dp"
        android:background="@drawable/bg_rounded"
        app:layout_constraintDimensionRatio="H,1:1"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/image_categorie"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:background="@color/black"
            android:contentDescription="categorie"
            android:src="@drawable/destination"/>

        <TextView
            android:textColor="#2d2d2d"
            android:id="@+id/lien_categorie"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="Destination incontournables"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>