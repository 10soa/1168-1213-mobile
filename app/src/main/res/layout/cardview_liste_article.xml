<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_liste_article"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/layout_article_1"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="45dp"
                android:id="@+id/image_categorie_article"
                android:layout_height="45dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/destination"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_navigate_next_24"
                app:tint="@color/blue_black_400" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/image_categorie_article">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parc national de l'Isalo"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/blue_black_400"
                    android:id="@+id/libelle_article"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Destination incontournable"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="@color/blue_real"
                    android:textSize="14sp"
                    android:id="@+id/categorie_article"/>

            </LinearLayout>


        </RelativeLayout>
        <TextView
            android:id="@+id/court_description_article"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content"
            android:text="Une fenêtre ouverte sur la biodiversité du Sud Malgache" />
        <ImageView
            android:id="@+id/image_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="5dp"
            android:layout_below="@id/court_description_article"
            android:scaleType="fitCenter"
            android:src="@drawable/photos2jpg"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>