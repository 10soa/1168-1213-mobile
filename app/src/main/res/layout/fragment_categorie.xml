<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_clear_700"
    tools:context=".Categorie.CategorieFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:background="@drawable/trending_background"
                android:padding="20dp"
                android:id="@+id/accueil_top"
                android:layout_marginHorizontal="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="ANDAO"
                    android:id="@+id/text_accueil"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="madagascar"
                    android:src="@drawable/madagascar"
                    app:layout_constraintBottom_toBottomOf="@id/text_accueil"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:paddingVertical="2dp"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/text_accueil"
                    android:text="Découvrez Madagascar, une île aux mille trésors, à travers nos catégories incontournables : destinations, cultures, traditions, gastronomie et bien plus encore. Plongez dans une aventure authentique et laissez-vous envoûter par la richesse touristique de ce joyau de l'Océan Indien. Embarquez dès maintenant pour une exploration passionnante au cœur de Madagascar ! "
                    ></TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclercategorie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="100dp"
                app:layout_constraintTop_toTopOf="@id/accueil_top"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>